from selenium import webdriver
from selenium.webdriver.common.keys import Keys
from selenium.webdriver.common.by import By
import pyautogui
import time
import uuid
import random
import string

driver=webdriver.Chrome(executable_path="D:\chromedriver.exe")
driver.get("https://www.zomato.com/ncr/saladspoint-dlf-phase-3-gurgaon/order")
time.sleep(80)
i=0


def my_random_string(string_length=10):
    random = str(uuid.uuid4())
    random = random.upper()
    random = random.replace("-","")
    return random[0:3]



def randomString(stringLength):
    letters = string.ascii_letters
    return ''.join(random.choice(letters) for i in range(stringLength))
while(True):
    driver.find_element_by_id("promo_code").clear()
    s="ZOMABL"+randomString(4)
    print(s)
    driver.find_element_by_id("promo_code").send_keys(s)
    time.sleep(2)
    driver.find_element(By.XPATH,"//*[@id='app']/div/div/div[1]/div/div/div[2]/div/div").click()
    time.sleep(2)
    pyautogui.click(600,960)
    time.sleep(1)
    i+1
    if(i==2):
        driver.findElement(By.name("s")).sendKeys(Keys.F5);
        i=0
        time.sleep(3)
